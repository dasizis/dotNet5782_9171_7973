<UserControl x:Class="PL.Views.WorkspaceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PL.Views"
             xmlns:vm="clr-namespace:PL.ViewModels"
             xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
             xmlns:syncfusionskin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF" 
             xmlns:converters="clr-namespace:PL.Views.Converters"
             xmlns:System="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <!--<UserControl.DataContext>
        <vm:WorkspaceViewModel />
    </UserControl.DataContext>-->
    <UserControl.Resources>
        <System:Double x:Key="ListPanelWidth">250</System:Double>
        <System:Double x:Key="ButtomPanelHeight">200</System:Double>
    </UserControl.Resources>
    <syncfusion:DockingManager x:Name="Dock" UseDocumentContainer="True"
                               syncfusionskin:SfSkinManager.VisualStyle="MaterialLight"
                                MaximizeButtonEnabled="True">

        <local:MainMapView syncfusion:DockingManager.Header="MainMap"
                           syncfusion:DockingManager.CanMaximize="True"
                           syncfusion:DockingManager.CanFloatMaximize="True"
                           syncfusion:DockingManager.CanClose="False" 
                           syncfusion:DockingManager.SideInDockedMode="Bottom"
                           syncfusion:DockingManager.DesiredHeightInDockedMode="180"/>
        
        <!--Lists Area-->
        <local:DronesListView x:Name="ListArea"
                              syncfusion:DockingManager.CanClose="False"
                              syncfusion:DockingManager.Header="Drones List" 
                              syncfusion:DockingManager.SideInDockedMode="Tabbed"
                              syncfusion:DockingManager.DesiredWidthInDockedMode="{StaticResource ListPanelWidth}"/>

        <local:ParcelsListView syncfusion:DockingManager.Header="Parcels List" 
                              syncfusion:DockingManager.CanClose="False"
                               syncfusion:DockingManager.SideInDockedMode="Tabbed"
                               syncfusion:DockingManager.TargetNameInDockedMode="{x:Static vm:Workspace.TargerNameOfListPanelType}"/>

        <local:BaseStationsListView syncfusion:DockingManager.Header="BaseStations List" 
                              syncfusion:DockingManager.CanClose="False"
                                    syncfusion:DockingManager.SideInDockedMode="Tabbed"
                                    syncfusion:DockingManager.TargetNameInDockedMode="{x:Static vm:Workspace.TargerNameOfListPanelType}"/>

        <local:CustomersListView syncfusion:DockingManager.Header="Customers List" 
                                 syncfusion:DockingManager.CanClose="False"
                                 syncfusion:DockingManager.SideInDockedMode="Tabbed"
                                 syncfusion:DockingManager.TargetNameInDockedMode="{x:Static vm:Workspace.TargerNameOfListPanelType}"/>
        <!--End Of List Area-->


    </syncfusion:DockingManager>
</UserControl>
