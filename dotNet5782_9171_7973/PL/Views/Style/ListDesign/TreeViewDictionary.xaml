<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:bo="clr-namespace:BO;assembly=BL"
                    xmlns:listDesign="clr-namespace:PL.Views.Style.ListDesign"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    
    <!--Converters-->
    <listDesign:ObjectToTreeViewProperitesConverter x:Key="ObjectToTreeViewProperitesConverter" />
    <listDesign:LocationToOrientaionConverter x:Key="LocationToOrientaionConverter" />
    <listDesign:BatteryValueToIconNameConverter x:Key="BatteryValueToIconNameConverter" />

    <!--Icon Style-->
    <Style TargetType="materialDesign:PackIcon">
        <Setter Property="Margin" Value="0,0,10,0" />
        <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBodyLight}" />
    </Style>

	<!--BO.Location-->
    <HierarchicalDataTemplate DataType="{x:Type bo:Location}" ItemsSource="{Binding Converter={StaticResource LocationToOrientaionConverter}}">
        <StackPanel Orientation="Horizontal">
            <materialDesign:PackIcon Kind="MapMarker" />
            <TextBlock Text="Location" FontWeight="Bold"/>
        </StackPanel>
    </HierarchicalDataTemplate>

    <!--Longitude-->
    <DataTemplate DataType="{x:Type listDesign:Longitude}">
        <StackPanel Orientation="Horizontal">
            <materialDesign:PackIcon Kind="Longitude" />
            <TextBlock Text="{Binding}" />
        </StackPanel>
    </DataTemplate>

    <!--Latitude-->
    <DataTemplate DataType="{x:Type listDesign:Latitude}">
        <StackPanel Orientation="Horizontal">
            <materialDesign:PackIcon Kind="Latitude" />
            <TextBlock Text="{Binding}" />
        </StackPanel>
    </DataTemplate>

    <!--Object property-->
    <DataTemplate DataType="{x:Type listDesign:TreeViewProp}">
        <DockPanel Width="200">
            <TextBlock Text="{Binding PropName}" FontWeight="Bold"/>
            <TextBlock Text="{Binding propValue}" TextAlignment="Right"/>
        </DockPanel>
    </DataTemplate>

    <!--Battery-->
    <DataTemplate DataType="{x:Type listDesign:Battery}">
        <DockPanel Width="200">
            <StackPanel Orientation="Horizontal">
                <materialDesign:PackIcon Kind="{Binding BatteryValue, Converter={StaticResource BatteryValueToIconNameConverter}}" />
                <TextBlock Text="Battery" FontWeight="Bold" />
            </StackPanel>
            <TextBlock Text="{Binding BatteryValue, StringFormat={}{0:F2}% }" TextAlignment="Right"/>
        </DockPanel>
        
    </DataTemplate>

    <!--BO.BaseStationForList-->
    <HierarchicalDataTemplate DataType="{x:Type bo:BaseStationForList}" ItemsSource="{Binding Converter={StaticResource ObjectToTreeViewProperitesConverter}}">
        <StackPanel Orientation="Horizontal" Tag="{Binding}">
            <TextBlock Text="{Binding Name}"/>
        </StackPanel>
    </HierarchicalDataTemplate>

    <!--BO.CustomerForList-->
    <HierarchicalDataTemplate DataType="{x:Type bo:CustomerForList}" ItemsSource="{Binding Converter={StaticResource ObjectToTreeViewProperitesConverter}}">
        <StackPanel Orientation="Horizontal" Tag="{Binding}">
            <TextBlock Text="{Binding Name}"/>
        </StackPanel>
    </HierarchicalDataTemplate>

    <!--BO.DroneForList-->
    <HierarchicalDataTemplate DataType="{x:Type bo:DroneForList}" ItemsSource="{Binding Converter={StaticResource ObjectToTreeViewProperitesConverter}}">
        <StackPanel Orientation="Horizontal" Tag="{Binding}">
            <TextBlock Text="{Binding Model}"/>
        </StackPanel>
    </HierarchicalDataTemplate>

    <!--BO.ParcelForList-->
    <HierarchicalDataTemplate DataType="{x:Type bo:ParcelForList}" ItemsSource="{Binding Converter={StaticResource ObjectToTreeViewProperitesConverter}}">
        <StackPanel Orientation="Horizontal" Tag="{Binding}">
            <materialDesign:PackIcon Kind="PackageVariantClosed" />
            <TextBlock Text="{Binding Id}"/>
        </StackPanel>
    </HierarchicalDataTemplate>
</ResourceDictionary>