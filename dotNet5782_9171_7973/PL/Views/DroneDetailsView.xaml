<UserControl x:Class="PL.Views.DroneDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PL.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <TextBlock Text="{Binding Drone.Id}"/>
        <TextBox Text="{Binding Drone.Model}"/>
        <TextBlock Text="{Binding Drone.MaxWeight}"/>
        <TextBlock Text="{Binding Drone.Battery}"/>
        <TextBlock Text="{Binding Drone.State}"/>
        <TextBlock Text="{Binding Drone.Location.Longitude}"/>
        <TextBlock Text="{Binding Drone.Location.Latitude}"/>

        <Button Content="UPDATE"
                Command="{Binding RenameDroneCommand}"/>
        <Button Content="DELETE"
                Command="{Binding DeleteCommand}"/>
        <Button Content="PROCEED WITH PARCEL"
                Command="{Binding ProceedWithParcelCommand}"/>
        <Button Content="CHARGE"
                Command="{Binding HandleChargeCommand}"/>
    </StackPanel>
</UserControl>
