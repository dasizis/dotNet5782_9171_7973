<UserControl x:Class="PL.Views.ParcelDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <TextBlock Text="{Binding Parcel.Id}"/>
        <TextBlock Text="{Binding Parcel.Sender.Id}"/>
        <TextBlock Text="{Binding Parcel.Target.Id}"/>
        <TextBlock Text="{Binding Parcel.Weight}"/>
        <TextBlock Text="{Binding Parcel.Priority}"/>
        <TextBlock Text="{Binding Parcel}"/>
        <TextBlock Text="{Binding Parcel.Requested}"/>
        <TextBlock Text="{Binding Parcel.Scheduled}"/>
        <TextBlock Text="{Binding Parcel.PickedUp}"/>
        <TextBlock Text="{Binding Parcel.Supplied}"/>
        <Button 
            Content="VIEW SENDER DETAILS"
            Command="{Binding ViewSenderCommand}"/>
        <Button
            Content="VIEW RECIEVER DETAILS"
            Command="{Binding ViewTargetCommand}"/>
        <Button 
            Content="VIEW DRONE DETAILS"
            Command="{Binding ViewDroneCommand}"/>
        <Button 
            Content="DELETE PARCEL"
            Command="{Binding DeleteCommand}"/>

    </StackPanel>
</UserControl>
