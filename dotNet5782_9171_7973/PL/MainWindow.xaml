<Window x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:dragablz="clr-namespace:Dragablz;assembly=Dragablz"
        xmlns:dockablz="clr-namespace:Dragablz.Dockablz;assembly=Dragablz"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        xmlns:local="clr-namespace:PL"
        Title="Quick Start Window" Height="900" Width="900">
    <Window.Resources>
        <system:String x:Key="Partition">QuickStart</system:String>
    </Window.Resources>
    <materialDesign:DialogHost>
        <dockablz:Layout  Partition="{StaticResource Partition}">
            <dragablz:TabablzControl x:Name="TabControl" Margin="8" ConsolidateOrphanedItems="True">
                <dragablz:TabablzControl.InterTabController>
                    <dragablz:InterTabController Partition="{StaticResource Partition}" />
                </dragablz:TabablzControl.InterTabController>
                <TabItem Header="Tab No. 1">
                    <local:DroneControl />
                </TabItem>
                <TabItem Header="Tab No. 2">
                </TabItem>
                <TabItem Header="Tab No. 3">
                    <local:DronesList />
                </TabItem>

            </dragablz:TabablzControl>
        </dockablz:Layout>
    </materialDesign:DialogHost>

</Window>

