<UserControl x:Class="PL.Views.ParcelDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:PL.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <vm:ParcelDetailsViewModel/>
    </UserControl.DataContext>
    <StackPanel>
        <TextBlock Text="{Binding Id}"/>
        <TextBlock Text="{Binding Sender.Id}"/>
        <TextBlock Text="{Binding Target.Id}"/>
        <TextBlock Text="{Binding Weight}"/>
        <TextBlock Text="{Binding Priority}"/>
        <TextBlock Text="{Binding Drone.Id}"/>
        <TextBlock Text="{Binding Requested}"/>
        <TextBlock Text="{Binding Scheduled}"/>
        <TextBlock Text="{Binding PickedUp}"/>
        <TextBlock Text="{Binding Supplied}"/>
        <Button 
            Content="VIEW SENDER DETAILS"
            Command="ShowSenderCommand"/>
        <Button
            Content="VIEW RECIEVER DETAILS"
            Command="ShowTargetCommand"/>
        <Button 
            Content="VIEW DRONE DETAILS"
            Command="ShowDroneCommand"/>

    </StackPanel>
</UserControl>
