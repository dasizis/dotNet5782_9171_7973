<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:bo="clr-namespace:BO;assembly=BL">
    <Style x:Key="Prop" TargetType="StackPanel">
        <Setter Property="Margin" Value="50,0" />
    </Style>

    <DataTemplate DataType="{x:Type bo:DroneForList}">
        <TreeViewItem>
            <TreeViewItem.Header>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding Id, StringFormat='#{0} '}" />
                    <TextBlock Text="{Binding Model}" />
                </StackPanel>
            </TreeViewItem.Header>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Model" />
                <TextBlock Text="{Binding Model}" />
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Max Weight" />
                <TextBlock Text="{Binding MaxWeight}" />
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Battery" />
                <TextBlock Text="{Binding Battery}" />
            </StackPanel>

        </TreeViewItem>
    </DataTemplate>

</ResourceDictionary>
